block append body
    .container.theme-showcase(role='main')

        .jumbotron
            form.form-horizontal(action="/users/login", method="post")
                div
                    label= "Username:"
                    input(type="text", name="username")
                div
                    label= "Password:"
                    input(type="password", name="password")
                div
                    input(type="submit", value="Log In")
